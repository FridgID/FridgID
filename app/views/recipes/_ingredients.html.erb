<ol>
  <% ingredients.each do |ing| %>
    <% if ing.seasonal == 1 %>
      <li style="background-color: #FB9738">
    <% elsif ing.seasonal == 0 %>
      <li style="background-color: #D73B2A">
    <% else %>
      <li style="background-color: #396CC6">
    <% end %>
      <%= ing.name %>
    </li>
  <% end %>
</ol>



